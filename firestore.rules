rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to submit account deletion requests
    match /accountDeletionRequests/{requestId} {
      allow create: if request.resource.data.keys().hasAll(['email', 'requestedAt', 'status'])
                    && request.resource.data.email is string
                    && request.resource.data.status == 'pending';
      allow read, update, delete: if false; // Only admins via Firebase Console
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
